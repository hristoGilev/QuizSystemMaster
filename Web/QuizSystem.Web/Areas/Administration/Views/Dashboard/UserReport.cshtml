@model List<QuizSystem.Web.Areas.ArreasModels.ReportModels.Userraport>
@{
    this.ViewData["Title"] = "Choose user for report";
}
    <form asp-action="GetAllExamsForUser">
        <div class="card">
            <div class="card-header"><h3>@this.ViewData["Title"]</h3></div>
            <div class="card-body">


                @foreach (var item in Model)

                {

                    <div>
                        <input type="checkbox" name="username" value="@item" />
                        <label><span style="margin-left:3px">@item.UserName</span></label>
                    </div>
                }

            </div>
            <div class="card-footer">
                <input type="submit" class="btn btn-primary" />
            </div> 
        </div>
    </form>
